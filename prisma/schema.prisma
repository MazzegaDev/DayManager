generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User{
  user_id Int @id @default(autoincrement())
  user_name String
  user_email String @unique
  user_pass String

 
  category Category[]
  task Task[]
}

model Task{
  task_id Int @id @default(autoincrement())
  task_name String
  task_priority String
  task_status String

  cate_id Int
  category Category @relation(fields: [cate_id], references: [cate_id])

  day_id Int
  dayofweek DayOfWeek @relation(fields: [day_id], references: [day_id])

  
  user_id Int
  user User @relation(fields: [user_id], references: [user_id])
}

model Category{
  cate_id Int @id @default(autoincrement())
  cate_name String

  task Task[]
  user_id Int
  user User @relation(fields: [user_id], references: [user_id])
  
}

model DayOfWeek{
 day_id Int @id @default(autoincrement())
 day_name String

 task Task[]
}